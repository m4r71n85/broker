@using Broker.Models
@model DetailsFullViewModel
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-sm-2">
        @if (Model.Image != null)
        {
            <img src="@Html.Image(Model.Image, ImageType.ProfilePhoto, ImageSizes.Normal)" class="img-circle"/>
        }
        <div>
            Rank: 8.9 / 10
        </div>
        @if (Model.Id == ViewBag.ApplicationUser.Id) { 
            <div>
                <a class="btn btn-info" href="@Url.Action("Edit")">Edit profile</a>
            </div>
        }
    </div>

    <div class="col-sm-4">
        <h2>Company</h2>
        @if (Model.Agency.Id != 0)
        {
            <img src="@Html.Image(Model.Agency.Image, ImageType.AgencyLogo, ImageSizes.Normal)"/>
            @Model.Agency.Name<br/>
            @Html.ActionLink("view details", "Details", "Agency", new { id = Model.Agency.Id }, null)
        }
        else
        {
            <div>Does not participate in any company...</div>
        }
        <h2>User Details</h2>
        <div class="row">
            <div class="col-sm-4">
                Username:
            </div>
            <div class="col-sm-8">
                @Model.FirstName
            </div>

            <div class="col-sm-4">
                Last Name:
            </div>
            <div class="col-sm-8">
                @Model.LastName
            </div>

            <div class="col-sm-4">
                Qr code:
            </div>
            <div class="col-sm-8">
                <img src="@Html.GoogleQrImage(Url.Action("Details", "Account", new { id = Model.Id }, Request.Url.Scheme))"/>
            </div>

        </div>
    </div>

    <div class="col-sm-6">
        <h2>Contacts</h2>

        <div class="col-sm-4">
            Email:
        </div>
        <div class="col-sm-8">
            @Model.Email
        </div>

        <div class="col-sm-4">
            Home phone:
        </div>
        <div class="col-sm-8">
            @Model.PhoneHome
        </div>

        <div class="col-sm-4">
            Mobile phone:
        </div>
        <div class="col-sm-8">
            @Model.PhoneCell
        </div>

        <div class="col-sm-4">
            Address:
        </div>
        <div class="col-sm-8">
            @if(Model.Address!=null) { 
                <img src="@Html.GoogleStaticImage(Model.Address)"/><br/>
                @Model.Address
            }
        </div>
    </div>
</div>

